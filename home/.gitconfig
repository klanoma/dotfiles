[user]
  name = Shaine Hatch
  email = shaine@digitaltrike.com
[core]
  whitespace = trailing-space,space-before-tab
  editor = vim
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[merge]
  stat = true
  tool = opendiff
[alias]
        st = status
        co = checkout
        com = commit -am
        ignore = update-index --assume-unchanged
        unignore = update-index --no-assume-unchanged
